<?xml version='1.0' encoding='utf-8'?>
<widget id="io.tiro.cordova-app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Tiro Cordova App</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="thiebault.gregoire@gmail.com" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <icon src="ressources/favicon.png" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^6.3.0" />
    <engine name="browser" spec="^5.0.4" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.4" />
    <plugin name="nodejs-mobile-cordova" spec="^0.4.2" />
    <plugin name="cordova-plugin-console" spec="^1.1.0" />
</widget>
